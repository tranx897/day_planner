<div>
  <div>
    <h1>
      List of all tasks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new task
    </h2>

    <form action="/insert_task" method="post">
      <div>
        <label for="start_time_box">
          Start time
        </label>

        <input type="datetime-local" id="start_time_box" name="query_start_time">
      </div>

      <div>
        <label for="end_time_box">
          End time
        </label>

        <input type="datetime-local" id="end_time_box" name="query_end_time">
      </div>

      <div>
        <input type="checkbox" id="status_box" name="query_status" value="1">

        <label for="status_box">Status</label>
      </div>

      <div>
        <label for="category_id_box">
          Category
        </label>

        <input type="text" id="category_id_box" name="query_category_id">
      </div>

      <button>
        Create task
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Start time
        </th>

        <th>
          End time
        </th>

        <th>
          Status
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_tasks.each do |a_task| %>
      <tr>
        <td>
          <%= a_task.id %>
        </td>

        <td>
          <%= a_task.start_time %>
        </td>

        <td>
          <%= a_task.end_time %>
        </td>

        <td>
          <%= a_task.status %>
        </td>

        <td>
          <%= a_task.category_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_task.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_task.updated_at) %> ago
        </td>

        <td>
          <a href="/tasks/<%= a_task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
